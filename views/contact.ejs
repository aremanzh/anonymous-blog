<%- include("partials/newHeader") -%> 

<div class="banner contact">
    <div class="container">
        <h1 class="banner-title"><span>Contact</span> Us</h1>
        <p> <%= contact %></p>
        <div style="width: 500px; margin: auto;">
            <form action="" method="post">
                <div class="form-group">
                    <label for="name">Name: </label>
                  <input type="text" class="form-control" placeholder='Name' name='name' required>
                  <label for="email">Email: </label>
                  <input type="email" class="form-control" placeholder='Email' name='email' required>
                  <label for="message">Your message: </label>
                  <textarea class="form-control" name="message" rows="10" placeholder='Message' required></textarea>
                  <hr>
                  <button>Ask now</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("partials/newFooter") -%> 